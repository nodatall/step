  "author": "Sylvan Swierkosz <sswierkosz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.15.3",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-react": "^6.22.0",
    "babel-register": "^6.24.0",
    "body-parser": "^1.17.1",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "chalk": "^1.1.3",
    "dotenv": "^4.0.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "express": "^4.14.1",
    "express-session": "^1.15.2",
    "jsdom": "^9.12.0",
    "jsdom-global": "^2.1.1",
    "knex": "^0.12.7",
    "mocha": "^3.2.0",
    "morgan": "^1.8.1",
    "moxios": "^0.3.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.2.0",
    "passport": "^0.3.2",
    "passport-google-oauth2": "^0.1.6",
    "pg-promise": "^5.6.4",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2",
    "sinon": "^2.1.0",
    "webpack": "^2.2.1",
    "webpack-error-notification": "^0.1.7",
    "winston": "^2.3.1"
  },
  "scripts": {
    "begin": "yarn run server & yarn run build & yarn run sass",
    "server": "nodemon --exec babel-node source/server/server.js",
    "build": "webpack --colors --progress -w",
    "build:dev": "NODE_ENV=development yarn run build",
    "build:production": "NODE_ENV=production yarn run build",
    "build:test": "NODE_ENV=test yarn run build",
    "sass": "node-sass source/index.scss public/main.css -w",
    "test": "yarn run migrate:test && yarn run mochatest",
    "mochatest": "nyc --cache --reporter=lcov mocha --compilers js:babel-register $(find source -name '*test.js') --require jsdom-global/register --require babel-polyfill",
    "report": "nyc report",
    "report:web": "open coverage/lcov-report/index.html",
    "migrate": "node ./node_modules/.bin/knex --knexfile source/dataServices/database/knexfile.js migrate:latest",
    "migrate:test": "NODE_ENV=test node ./node_modules/.bin/knex --knexfile source/dataServices/database/knexfile.js migrate:latest",
    "migrate:make": "node ./node_modules/.bin/knex --knexfile source/dataServices/database/knexfile.js migrate:make",
    "migrate:rollback": "node ./node_modules/.bin/knex --knexfile source/dataServices/database/knexfile.js migrate:rollback",
    "lint": "eslint source/**",
    "db:seed": "NODE_ENV=development node ./node_modules/.bin/knex --knexfile source/dataServices/database/knexfile.js seed:run",
    "db:setup": "source scripts/databaseSetup.sh",
    "db:rebuild": "dropdb step_test && createdb step_test && dropdb step_development && createdb step_development && yarn migrate && yarn db:seed"
  },
  "nyc": {
    "exclude": [
      "source/dataServices/database/queries/index.js",
      "source/dataServices/database/commands/index.js",
      "source/server/controllers/v1/index.js"
    ]
  }
}
